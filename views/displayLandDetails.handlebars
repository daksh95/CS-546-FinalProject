<nav class="navbar navbar-expand-sm bg-primary navbar-dark justify-content-center sticky-top">
    <div class="container-fluid">
        <div class="navbar-header text-light">
            WebSite Name
        </div>
        <ul class="nav navbar-nav">
            <li class="nav-item"><a href="/land" class="nav-link">Home</a></li>
            <li class="nav-item"><a href="/user/{{userId}}/land" class="nav-link">My Property</a></li>
            <li class="nav-item"><a href="/user/{{userId}}/transactions" class="nav-link">My Transactions</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item"><a href="/user/{{userId}}/profile" class="nav-link">Profile</a></li>
        </ul>
    </div>
</nav>

<main class="container-fluid">
    <div class="row">
        <div class="col-md-8 card mt-3 ml-3 border-info rounded-lg shadow-lg">
            <p class="m-0">{{land.address.line1}} {{land.address.line2}},</p>
            <p>{{land.address.city}}, {{land.address.state}} {{land.address.zipCode}}</p>
            <p>Dimensions: {{land.dimensions.length}}ft x {{land.dimensions.breadth}}ft</p>
            <p>Area: {{land.area}} sq ft</p>
            <p>{{land.type}} Area</p>
            <p class="m-0">Restrictions: </p>
            <ul>
                {{#each land.restrictions}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{#if land.sale.onSale}}
            <p>Sale: Yes</p>
            <p>Price: ${{land.sale.price}}</p>
            <p>Date of Listing: {{land.sale.dateOfListing}}</p>
            {{else}}
            <p>Sale: No</p>
            {{/if}}
        </div>
        <div class="col-md-3 card mt-3 ml-3 border-info rounded-lg shadow-lg pt-4">
            {{#if isOwner}}
            <a class="mx-auto my-auto" href="#"><button>Edit Property</button></a>
            <br>
            <a class="mx-auto my-auto" href="/transactions/land/{{land._id}}"><button>View Transaction</button></a>
            {{else}}
            {{#if land.sale.onSale}}
            {{#if pendingTransaction}}
            <button type="button" class="btn btn-primary" data-toggle="tooltip"
                title="You already have a pending transaction" disabled>
                Place Bid
            </button>
            {{else}}
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#bidModal">
                Place Bid
            </button>
            {{/if}}
            <div class="modal" id="bidModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Enter your bid amount. Please ensure it is in close range to the
                                price (+/-1000)</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <form action="/land/{{land._id}}/{{owner._id}}" method="post" id="bidForm">
                                <label for="bidInput">Bid: </label>
                                <input type="number" name="bidInput" id="bidInput">
                                <label hidden for="price">Price</label>
                                <input type="hidden" name="price" id="price" value="{{land.sale.price}}">
                                <button type="submit" class="btn btn-success">Place</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            {{/if}}
            <p class="font-weight-bold mx-auto my-auto">Contact Info: </p>
            <p>{{owner.name}}</p>
            <p>{{owner.phone}}</p>
            <p>{{owner.emailId}}</p>
            {{/if}}
        </div>
    </div>
</main>