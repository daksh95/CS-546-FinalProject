<h1 class="font-italic p-3">
    Transactions as a Buyer
</h1>
{{#if emptyBuyerTransaction}}
<div class="p-3">
    You haven't placed bid for any properties!
</div>
{{else}}
<div class="table-responsive p-3">
    <table class="table">
        <thead>
            <tr>
                <th>Land</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each buyerTransaction}}
            <a href="/user/transaction/{{this.transactionId}}">
                <td>
                    <p class="m-0">{{this.name.line1}} {{this.namae.line2}},</p>
                    <p>{{this.name.city}}, {{this.name.state}} {{this.name.zipCode}}</p>
                </td>
                <td>{{this.status}}</td>
            </a>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}
<hr>

<h1 class="font-italic p-3">
    Transactions as a Seller
</h1>
{{#if emptySellerTransaction}}
<div class="p-3">
    You haven't received any bids for your property!
</div>
{{else}}
<div class="table-responsive p-3">
    <table class="table">
        <thead>
            <tr>
                <th>Land</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each sellerTransaction}}
            <a href="/user/transaction/{{this.transactionId}}">
                <td>
                    <p class="m-0">{{this.name.line1}} {{this.namae.line2}},</p>
                    <p>{{this.name.city}}, {{this.name.state}} {{this.name.zipCode}}</p>
                </td>
                <td>{{this.status}}</td>
            </a>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}