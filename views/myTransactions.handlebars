<h1 class="font-italic p-3">
    Transactions as a Buyer
</h1>
{{#if emptyBuyerTransaction}}
<div class="p-3">
    You haven't placed bid for any properties!
</div>
{{else}}
<div class="container-fluid p-3">
    {{#each buyerTransaction}}
    <a href="/user/transaction/{{this.transactionId}}" class="text-decoration-none">
        <div class="card border-info rounded-lg shadow-lg">
            <div class="row p-2">
                <p class="col-md-10 text-dark">{{this.name.line1}} {{this.name.line2}}, {{this.name.city}},
                    {{this.name.state}} {{this.name.zipCode}}</p>
                <p class="col-md-2 text-dark">{{this.status}}</p>
            </div>
        </div>
    </a>
    {{/each}}
</div>
{{/if}}
<hr>

<h1 class="font-italic p-3">
    Transactions as a Seller
</h1>
{{#if emptySellerTransaction}}
<div class="p-3">
    You haven't received any bids for your property!
</div>
{{else}}
<div class="container-fluid p-3">
    {{#each sellerTransaction}}
    <a href="/user/transaction/{{this.transactionId}}" class="text-decoration-none">
        <div class="card border-info rounded-lg shadow-lg">
            <div class="row p-2">
                <p class="col-md-10 text-dark">{{this.name.line1}} {{this.name.line2}}, {{this.name.city}},
                    {{this.name.state}} {{this.name.zipCode}}</p>
                <p class="col-md-2 text-dark">{{this.status}}</p>
            </div>
        </div>
    </a>
    <br>
    {{/each}}
</div>
{{/if}}