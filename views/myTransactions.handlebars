<h2 class="font-italic p-3">
    Buyer Transactions
</h2>
{{#if emptyBuyerTransaction}}
<div class="p-3">
    You haven't placed bid for any properties!
</div>
{{else}}
<div class="table-responsive p-3">
    <table class="table">
        <thead>
            <tr>
                <th>Land</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each buyerTransaction}}
            <a href="/user/transaction/{{this.transactionId}}">
                <td>{{this.name}}</td>
                <td>{{this.status}}</td>
            </a>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}
<hr>

<h2 class="font-italic p-3">
    Seller Transactions
</h2>
{{#if emptySellerTransaction}}
<div class="p-3">
    You haven't received any bids for your property!
</div>
{{else}}
<div class="table-responsive p-3">
    <table class="table">
        <thead>
            <tr>
                <th>Land</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each sellerTransaction}}
            <a href="/user/transaction/{{this.transactionId}}">
                <td>{{this.name}}</td>
                {{#if this.status}}
                <td>{{this.status}}</td>
                {{else}}
                <td>Pending approval</td>
                {{/if}}
            </a>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}