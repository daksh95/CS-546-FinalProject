<header>
    <nav class="navbar navbar-expand-sm bg-primary navbar-dark justify-content-center sticky-top">
        <div class="container-fluid">
            <div class="navbar-header text-light">
                <a class="navbar-brand" href="#">WebSite Name</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="nav-item"><a href="/home" class="nav-link text-light">Home</a></li>
                <li class="nav-item"><a href="/entity/allTransactions/:{{id}}" class="nav-link text-light">View all transactions</a></li>
                <li class="nav-item"><a href="/entity/pendingTransactions/:{{id}}" class="nav-link text-light">View pending transactions</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
                <li class="nav-item"><a href="/entity/myProfile" class="nav-link text-light">Profile</a></li>
            </ul>
        </div>
    </nav>
</header>

<main>
    <h1>Welcome {{entity.name}} to your profile!</h1>
    <div class="container">
        {{#if createdProfile}}
        <a href="#"><button class="btn btn-success pull-right">Edit Profile</button></a>
        <p>ID: {{entity._id}}</p>
        <p>Name: {{entity.name}}</p>
        <p>Role: {{entity.role}}</p>
        <p>Contact information: {{entity.contactInfo}}</p>
        <p>EmailId: {{entity.emailId}}</p>
        <p>Website: {{entity.Website}}</p>
        <p>License: {{entity.license}}</p>
        {{else}}
        <a href="#"><button class="btn btn-success pull-right">Create profile</button></a>
        {{/if}}
    </div>
</main>